<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.detectivegame.HouseVaultContents" >

    <ImageView 
         android:id="@+id/file"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/final_file"/>
    
    <Button
        android:id="@+id/report"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/report"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:onClick="report"
        android:visibility="invisible"/>
    
     <ImageView 
        android:id="@+id/prompt_pane"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prompt_box"/>
    
     <TextView 
        android:id="@+id/text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/file_discover"
        android:textSize="12sp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"/>
     
     <Button
        android:id="@+id/ok"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/okay"
        android:textSize="12sp"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="closePrompt"/>
    
</RelativeLayout>
