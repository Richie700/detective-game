<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radioassembly"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.detectivegame.Shop" >

    <ImageView
        android:id="@+id/pink_transistor"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:contentDescription="@string/description"
        android:src="@drawable/transistor" />
    
    <ImageView
        android:id="@+id/small_diode"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:contentDescription="@string/description"
        android:src="@drawable/diode"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"/>
     
     <ImageView
        android:id="@+id/big_diode"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:contentDescription="@string/description"
        android:src="@drawable/diode"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"/>
      

      <ImageView
        android:id="@+id/blue_transistor"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:contentDescription="@string/description"
        android:src="@drawable/blue_transistor"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="210dp"/>
      
      <ImageView
        android:id="@+id/pink_holder"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:contentDescription="@string/description"
        android:src="@drawable/redholder"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="350dp"/>
      
       <ImageView
        android:id="@+id/big_holder"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:contentDescription="@string/description"
        android:src="@drawable/redholder"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="190dp"/>
       
       <ImageView
        android:id="@+id/blue_holder"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:contentDescription="@string/description"
        android:src="@drawable/redholder"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"/>
        
       <ImageView
        android:id="@+id/small_holder"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:contentDescription="@string/description"
        android:src="@drawable/redholder"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="190dp"/>
       
       <ImageView 
        android:id="@+id/prompt_pane"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prompt_box"
        android:visibility="visible"/>
       
       <TextView 
        android:id="@+id/radio_instr"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
       	android:text="@string/radio_info"
       	android:visibility="visible"/>
       
       <Button 
        android:id = "@+id/okay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_instr"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="@string/okay"
		android:textSize="15sp"
        android:onClick="closePrompt"
        android:visibility="visible"/>
       
       <TextView 
        android:id="@+id/radio_info"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:textSize="13sp"
       	android:text="@string/radio_assembled"
       	android:visibility="invisible"/>
       
       <Button 
        android:id = "@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_below="@id/radio_info"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="@string/okay"
		android:textSize="15sp"
        android:onClick="openMap"
        android:visibility="invisible"/>
       
</RelativeLayout>
