<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.detectivegame.OpenMap" >

    <Button
        android:id="@+id/area1_button"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:onClick="openHouse"
        android:background="@android:color/transparent"/>
    
    <Button
        android:id="@+id/area4_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area1_button"
        android:layout_alignLeft="@id/area1_button"
        android:layout_alignStart="@id/area1_button"
        android:layout_marginTop="35dp"
        android:onClick="openPost"
        android:background="@android:color/transparent"/>
    
    <Button
        android:id="@+id/area7_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area4_button"
        android:layout_alignLeft="@id/area4_button"
        android:layout_alignStart="@id/area4_button"
        android:layout_marginTop="35dp"
        android:onClick="openDinerApartment"
        android:background="@android:color/transparent"/>
    
    <Button
        android:id="@+id/area2_button"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:onClick="openShop"
        android:background="@android:color/transparent"/>
    
    <Button
        android:id="@+id/area5_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area2_button"
        android:layout_alignLeft="@id/area2_button"
        android:layout_alignStart="@id/area2_button"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"/>
    
     <Button
        android:id="@+id/area8_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area5_button"
        android:layout_alignLeft="@id/area5_button"
        android:layout_alignStart="@id/area5_button"
        android:layout_marginTop="35dp"
        android:onClick="openDiner"
        android:background="@android:color/transparent"/>
     
     <Button
        android:id="@+id/area3_button"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="openUnknownApartment"
        android:background="@android:color/transparent"/>
     
     <Button
        android:id="@+id/area6_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area3_button"
        android:layout_alignLeft="@id/area3_button"
        android:layout_alignStart="@id/area3_button"
        android:layout_marginTop="35dp"
        android:onClick="openBank"
        android:background="@android:color/transparent"/>
     
     <Button
        android:id="@+id/area9_button"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_below="@id/area6_button"
        android:layout_alignLeft="@id/area6_button"
        android:layout_alignStart="@id/area6_button"
        android:layout_marginTop="35dp"
        android:onClick="openPolice"
        android:background="@android:color/transparent"/>
    
    <ImageView 
        android:id="@+id/prompt_pane"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/blank"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/prompt_box"
        android:visibility="invisible"/>
    
     <TextView 
        android:id="@+id/message"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/nothing_of_interest"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
     
     <Button
        android:id="@+id/okay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/okay"
        android:textSize="12sp"
        android:layout_below="@id/message"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="closePrompt"
        android:visibility="invisible"/>

</RelativeLayout>
