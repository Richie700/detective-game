<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crime_scene"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.detectivegame.CrimeScene" >

    <!-- Display object information -->
   <TextView 
        android:id="@+id/clue_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
       	android:text="@string/blank"
       	android:textColor="#E31E1E"/>
    
   	 <!-- Button to select object -->
     <Button 
        android:id = "@+id/body_clue"
        android:layout_width="120dp"
        android:layout_height="80dp"
		android:layout_marginTop="360dp"
		android:layout_marginStart="5dp"
		android:layout_marginLeft="5dp"
		android:background="@android:color/transparent"
        android:onClick="analyse1"/>

      <Button
          android:id="@+id/books_clue"
          android:layout_width="70dp"
          android:layout_height="80dp"
		  android:layout_marginTop="200dp"
		  android:layout_marginStart="140dp"
		  android:layout_marginLeft="140dp"
		  android:background="@android:color/transparent"
          android:onClick="analyse2" />


      <Button
          android:id="@+id/newspaper_clue"
          android:layout_width="90dp"
          android:layout_height="70dp"
		  android:layout_marginTop="310dp"
		  android:layout_marginStart="190dp"
		  android:layout_marginLeft="190dp"
		  android:background="@android:color/transparent"
          android:onClick="openNewspaper"/>

      <Button
          android:id="@+id/map_clue"
          android:layout_width="200dp"
          android:layout_height="140dp"
          android:layout_marginTop="20dp"
		  android:layout_marginStart="5dp"
		  android:layout_marginLeft="5dp"
		  android:background="@android:color/transparent"
		  android:onClick="analyse3"/>

</RelativeLayout>
